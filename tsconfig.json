{
  "compilerOptions": {
    "strict": true,
    "strictFunctionTypes": true,
    "incremental": true,
    "module": "commonjs",
    "target": "ES2022",
    "moduleResolution": "node",
    "emitDecoratorMetadata": false,
    "experimentalDecorators": false,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "removeComments": true,
    "sourceMap": false,
    "baseUrl": ".",
    "outDir": "build",
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  }
}
